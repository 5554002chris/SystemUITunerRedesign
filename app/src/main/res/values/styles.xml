<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentLight</item>
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="materialButtonStyle">?buttonStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="AppTheme.Dark" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryLight</item>
        <item name="colorSecondary">@color/colorAccent</item>
        <item name="colorSecondaryVariant">@color/colorAccentLight</item>
        <item name="buttonStyle">@style/Widget.MaterialComponents.Button.TextButton</item>
        <item name="materialButtonStyle">?buttonStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="Material.Drawable.CircularProgress.Determinate.Accented" parent="Material.Drawable.CircularProgress.Determinate">
        <item name="cpd_strokeSize">15dp</item>
        <item name="cpd_strokeColor">?colorAccent</item>
    </style>

</resources>
